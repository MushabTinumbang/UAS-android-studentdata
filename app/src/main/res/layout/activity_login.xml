<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/background"
    tools:context=".RegisterActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/shape"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:id="@+id/l_img_1"
        />

    <ImageView
        android:id="@+id/l_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="25dp"
        android:src="@drawable/ic_back" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/l_img_1"
        android:text="Welcome Back!"
        android:textSize="18sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/poppinssemibold"
        android:textColor="@color/black"
        android:id="@+id/l_txt_1"/>

    <ImageView
        android:id="@+id/l_img_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/l_txt_1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:src="@drawable/login" />
    <LinearLayout
        android:padding="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/l_ly1"
        android:orientation="vertical"
        android:layout_below="@id/l_img_2">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:paddingLeft="15dp"
            android:id="@+id/l_username"
            android:background="@drawable/getstarted"
            android:backgroundTint="@color/white"
            android:textSize="15dp"
            android:hint="Enter your username" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:layout_marginTop="15dp"
            android:id="@+id/l_password"
            android:paddingLeft="15dp"
            android:background="@drawable/getstarted"
            android:backgroundTint="@color/white"
            android:textSize="15dp"
            android:hint="Enter your password"
            android:inputType="textPassword"/>/>

    </LinearLayout>

    <Button
        android:id="@+id/l_btn1"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/l_ly1"
        android:layout_centerHorizontal="true"
        android:background="@drawable/getstarted"
        android:text="Login"
        android:textColor="@color/white"
        android:textSize="13dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/l_ly2"
        android:orientation="horizontal"
        android:layout_below="@id/l_btn1"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppinsregular"
            android:textSize="12sp"
            android:text="Do not have an account yet?"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Register"
            android:fontFamily="@font/poppinssemibold"
            android:textSize="12sp"
            android:id="@+id/txt_register"
            android:textColor="@color/secondaryColor"/>
    </LinearLayout>
</RelativeLayout>