<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/background"
    tools:context=".RegisterActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/shape"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:id="@+id/ed_img_1"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/ed_ly_1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/d_txt_1"
            android:text="admin"
            android:fontFamily="@font/poppinssemibold"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:src="@drawable/ic_back"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="25dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="23dp"
            android:layout_marginRight="18dp"
            android:gravity="right"
            android:id="@+id/logout"
            android:textAlignment="gravity"
            android:text="Logout"
            android:textSize="16sp"
            android:fontFamily="@font/poppinssemibold"
            android:textColor="@color/black"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/ed_txt_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ed_img_1"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/poppinssemibold"
        android:text="Welcome Onboard!"
        android:textColor="@color/black"
        android:textSize="18sp" />


    <LinearLayout
        android:padding="15dp"
        android:layout_width="match_parent"
        android:layout_marginTop="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/ed_ly1"
        android:orientation="vertical"
        android:layout_below="@id/ed_txt_1">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:paddingLeft="15dp"
            android:id="@+id/editname"
            android:background="@drawable/getstarted"
            android:backgroundTint="@color/white"
            android:textSize="15dp"
            android:hint="Nama" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:paddingLeft="15dp"
            android:layout_marginTop="15dp"
            android:id="@+id/editnpm"
            android:background="@drawable/getstarted"
            android:backgroundTint="@color/white"

            android:textSize="15dp"
            android:hint="NPM" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:layout_marginTop="15dp"
            android:paddingLeft="15dp"
            android:id="@+id/editjurusan"
            android:background="@drawable/getstarted"
            android:backgroundTint="@color/white"
            android:textSize="15dp"
            android:hint="Jurusan" />


    </LinearLayout>

    <Button
        android:id="@+id/edit_save"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/ed_ly1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="125dp"
        android:background="@drawable/getstarted"
        android:text="Save"
        android:textColor="@color/white"
        android:textSize="13dp" />

</RelativeLayout>